<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".Fragments.NowPlayingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        >

        <ImageView
            android:id="@+id/songNowPlayingImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/album_round"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/songNowPlayingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kesariya"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:lines="1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/songNowPlayingArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kesariya"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:lines="1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            />



    </LinearLayout>


    <ImageButton
        android:id="@+id/songNowPlayingPlay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_play_arrow_24"
        android:background="@color/black"
        android:layout_marginEnd="20dp"
        />

    <ImageButton
        android:id="@+id/songNowPlayingNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_skip_next_24"
        android:background="@color/black"
        app:tint="@color/white"
        android:layout_marginEnd="20dp"
        />


</LinearLayout>